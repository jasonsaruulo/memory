<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/main_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/main_permission_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:text="@string/main_read_external_storage_permission_explanation"
        android:gravity="center" />

    <Button
        android:id="@+id/main_new_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/main_button_margin"
        android:text="@string/main_new_game" />

    <TextView
        android:id="@+id/main_number_of_turns"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/main_number_of_turns_margin"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:id="@+id/main_game_board"
        android:stretchColumns="*"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_below="@id/main_number_of_turns"
        android:layout_above="@id/main_new_game">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.shafiq.saruul.memory.main.MemoryCardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/main_expanded_image"
        android:padding="@dimen/main_enlarged_image_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
